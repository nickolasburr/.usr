#!/usr/bin/env bash

###
### hex2dec: Convert hexidecimal to decimal.
###

USAGE='Usage: hex2dec [-h|--help] hex'
REGEX='0[xX][0-9a-fA-F]+'
HEX="$1"

if [[ -z $HEX ]]; then
	printf '%s\n' "$USAGE"

	exit 1
fi

case "$1" in
	-h|--help)
		printf '%s\n' "$USAGE"

		exit 0
	;;
esac

if [[ ! $HEX =~ $REGEX ]]; then
	printf 'Invalid hex value %s\n' "$HEX"

	exit 1
fi

# Strip leading 0x from hex.
HEX=$(echo $HEX | tr -d '0x')

echo $((16#$HEX))
